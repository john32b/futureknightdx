	<!--<include path="C:/home/code/HT/djFlixel/source/" />	-->
	
	<source path="source" />
	
	<library name="default" type="pak" if="hl" unless="debug"/>
		<assets path="assets" include="*.ini|*.json"/>
		
		<assets path="assets/font" include="*.ttf|*.otf|" type="font" rename="fnt" embed="true"/>
		<assets path="assets/images" type="image" include="*.png|*.jpg" rename="im"/>
		<assets path="assets/maps" type="text" exclude="_debug.tmx" include="*.tmx" rename="map"/>
		
		<assets path="assets/music" type="music" rename="mus" include="*.mp3" if="flash"/>
		<assets path="assets/music" type="music" rename="mus" include="*.ogg" unless="flash"/>
		
		<assets path="assets/sound_mp3" type="sound" include="*.mp3" rename="snd" if="flash"/>
		<assets path="assets/sound_ogg" type="sound" include="*.ogg" rename="snd" unless="flash"/>
	
		
